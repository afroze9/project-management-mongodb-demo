@page
@model ProjectManagement.Pages.CreateTaskModel

@{
    ViewData["Title"] = "Create Project";
}

<h1>Create</h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaskCreationVM.Summary" class="control-label"></label>
                <input asp-for="TaskCreationVM.Summary" class="form-control" />
                <span asp-validation-for="TaskCreationVM.Summary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskCreationVM.Description" class="control-label"></label>
                <input asp-for="TaskCreationVM.Description" class="form-control" />
                <span asp-validation-for="TaskCreationVM.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskCreationVM.AsignedTo" class="control-label"></label>
                <select asp-for="TaskCreationVM.AsignedTo">
                    @foreach (var person in Model.People)
                    {
                        <option value="@person.Id">@person.DisplayName</option>
                    }
                </select>
                <span asp-validation-for="TaskCreationVM.AsignedTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Companies">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}