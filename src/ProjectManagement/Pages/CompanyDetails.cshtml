@page
@model ProjectManagement.Pages.CompanyDetailsModel

@{
    ViewData["Title"] = "Company Details";
}

<h3>
    @Model.Company.Name
</h3>

<p>
    <a asp-page="CreateProject" asp-route-companyId="@Model.Company.ID">Create Project</a>
</p>


<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Company.Projects[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Company.Projects[0].CreatedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Company.Projects[0].ModifiedOn)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (ProjectListingVM item in Model.Company.Projects)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedOn)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./ProjectDetails" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
