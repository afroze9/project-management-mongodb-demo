@page
@using ProjectManagement.Models
@model ProjectManagement.Pages.CompaniesModel

@{
    ViewData["Title"] = "Companies";
}

<p>
    <a asp-page="CreateCompany">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Companies[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Companies[0].CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Companies[0].ModifiedOn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Company item in Model.Companies)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedOn)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./CompanyDetails" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
